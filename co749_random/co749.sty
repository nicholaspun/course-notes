% -- Packages -- %
\RequirePackage[utf8]{inputenc}
\RequirePackage[english]{babel}
\RequirePackage{amsmath, amssymb, amsthm}
\RequirePackage[margin=1in]{geometry}
\RequirePackage{parskip}
\RequirePackage{graphicx}
\RequirePackage{enumitem}
\RequirePackage{hyperref}
\RequirePackage{cleveref}
\RequirePackage{bookmark}
\RequirePackage[mathscr]{eucal}
\RequirePackage{pdfpages}

% -- Theorems, Definitions, Examples -- %
\theoremstyle{definition}
\newtheorem{theorem}{Theorem}[section]
\newtheorem{proposition}{Proposition}[section]
\newtheorem{lemma}{Lemma}[section]
\newtheorem{corollary}{Corollary}[section]
\newtheorem{definition}{Definition}[section]
\newtheorem{examplex}{Example}[section]
\newenvironment{example}
  {\pushQED{\qed}\renewcommand{\qedsymbol}{$\triangle$}\examplex}
  {\popQED\endexamplex}
\newtheorem*{note}{Note}
\newtheorem{remark}{Remark}[section]

\numberwithin{equation}{section}

% -- Shortcuts -- %
% Number Systems
\DeclareMathOperator{\R}{\mathbb{R}}
\DeclareMathOperator{\N}{\mathbb{N}}
\DeclareMathOperator{\Q}{\mathbb{Q}}
\DeclareMathOperator{\Z}{\mathbb{Z}}

% Probability
\DeclareMathOperator{\E}{\mathbb{E}}
\DeclareMathOperator{\PR}{\mathbb{P}}
\DeclareMathOperator{\Var}{\mathrm{Var}}
\DeclareMathOperator{\Bin}{\mathrm{Bin}}
\DeclareMathOperator{\Po}{\mathrm{Po}}

% Other
\DeclareMathOperator{\G}{\mathscr{G}}
\DeclareMathOperator{\bigO}{\mathcal{O}}

% -- Aliases -- %
\newcommand{\ul}{\underline}
\renewcommand{\bf}{\textbf}
\renewcommand{\it}{\textit}
\renewcommand{\tt}{\texttt}

% -- Section Title -- %
\RequirePackage{titlesec}
\titleformat{\section}{\normalfont\Large\bfseries}{Lecture \thesection:}{0.5em}{}

\RequirePackage[titles]{tocloft}
\renewcommand{\cftsecpresnum}{Lecture\space}
\newlength\mylength
\settowidth\mylength{\cftsecpresnum}
\addtolength\cftsecnumwidth{\mylength}
