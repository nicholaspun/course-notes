    theorem style=plain,
    fonttitle=\bfseries,
    coltitle=black,
    colback=white,
    parbox=false,
    breakable
}}

\newtcbtheorem[number within=chapter]{definition}{Definition}
    {deflt, colback=lightgray!15, colframe=lightgray!35!black}{defn}
